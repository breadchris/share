{
  "manifest_version": 3,
  "name": "DOM Class Watcher",
  "version": "1.0",
  "description": "Watches for changes to class attributes and sends them to localhost:8080/modify.",
  "permissions": [
    "webRequest",
    "activeTab"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ]
}
